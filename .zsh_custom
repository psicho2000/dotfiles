#!/bin/bash

# Load common dotfiles
for file in ~/.{functions,aliases,docker}; do
    [ -r "$file" ] && [ -f "$file" ] && source "$file";
done;
unset file;

# Set dircolors
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
fi

# Define alias for colorized less
function lessc() {
    colorize $1|less
}

# Define editors
export EDITOR='nano'
export VISUAL='nano'
export PAGER='less'